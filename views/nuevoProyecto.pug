extends layout

block contenido
    .contenido-principal
        h1 #{nombrePagina}

        // 
        if errores
            each error in errores
                .alerta= error.texto

        //formulario
        //mediante action definimos a que archivo enviaremos el action
        //mediante post enviamos los datos de un formulario de forma segura
        form.agregar-proyecto(action="/nuevo-proyecto " method="POST")
            .campo  
                label(for="nombre") Nombre Proyecto:
                input(type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")